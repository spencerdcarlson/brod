{deps, [ {supervisor3, "1.1.11"}
       , {kafka_protocol, "4.0.3"}
       , {snappyer, "1.2.8"}
       ]}.
{project_plugins, [ {rebar3_lint, "~> 1.0.2"}
                  , {rebar3_ex_doc, "~> 0.2.9"}
                  , {rebar3_hex, "~> 7.0.1"}
                  ]}.
{edoc_opts, [{preprocess, true}, {macros, [{build_brod_cli, true}]}]}.
{ex_doc,
  [ {extras,
     [ {"changelog.md", #{title => "Changelog"}}
     , {"README.md", #{title => "Overview"}}
     , {"LICENSE", #{title => "License"}}
     , {"LICENSE", #{title => "License"}}
     ]}
   , {main, "README.md"}
   , {homepage_url, "https://hexdocs.pm/brod"}
   , {source_url, "https://github.com/kafka4beam/brod"}
   , {api_reference, false}
  ]}.
{hex, [{doc, ex_doc}]}.
{erl_opts, [warn_unused_vars,warn_shadow_vars,warn_obsolete_guard,debug_info]}.
{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls,
               deprecated_functions]}.

{escript_incl_apps, [docopt, brod]}.

{ct_opts, [{enable_builtin_hooks, false}]}.

{dialyzer, [{warnings, [unknown]}]}.
{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.

{plugins, [coveralls]}.
